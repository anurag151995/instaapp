<div class="card p-3">
    <div class="d-flex align-items-center">
        <div class="image"> <img src="https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=80" class="rounded" width="155"> </div>
        <div class="ml-3 w-100">
            <h4 class="mb-0 mt-0"><%=@user.email%></h4> <span>User</span>
            <div class="p-2 mt-2 bg-primary d-flex justify-content-between rounded text-white stats">
                <div class="d-flex flex-column"> <span class="articles">Followers</span> <span class="number1"><%= @user.followers.count%></span> </div>
                <div class="d-flex flex-column"> <span class="followers">Following</span> <span class="number2"><%= @user.following.count%></span> </div>
                <div class="d-flex flex-column"> <span class="rating">posts</span> <span class="number3"><%=@user.posts.count%></span> </div>
            </div>
            <div class="button mt-2 d-flex flex-row align-items-center"><%=link_to 'Follow', user_relationships_path(@user), method: :post,  class: 'btn btn-sm btn-outline-primary w-100' unless @rel.present? %>
            <%=link_to 'Unfollow', relationship_path(@rel.id), method: :delete,  class: 'btn btn-sm btn-outline-primary w-100' if @rel.present? %><%= link_to 'Back', users_path, class: 'btn btn-sm btn-outline-primary w-100'%>
            </div>
        </div>
    </div>
</div>

