<p id="notice"><%= notice %></p>
<h1>Posts</h1>
<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
<%= link_to 'Follow New User', users_path, class: 'btn btn-primary' %>

<hr>
<% @posts.each do |post| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5> 
      <p class="card-text"><%= truncate(post.body, length: 60) %></p>
      <%if post.main_image.present? %>
        <%= image_tag post.main_image %>
      <%end%>
      <%= link_to 'Edit', edit_post_path(post), class: 'card-link' %>
      <%= link_to 'Like', create_like_path(post), method: :post, remote: true,class: 'card-link' %> 
      <td id="posts_<%=post.id%>"><%= render partial: "posts/likes_count", locals: {post: post} %></td>
    </div>
  </div>
<% end %>